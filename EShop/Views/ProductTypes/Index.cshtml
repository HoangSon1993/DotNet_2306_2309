@model IEnumerable<Eshop.Models.ProductType>
<a asp-action="Create" class="btn btn-success mb-2">Thêm</a>
<table class="table table-light">
    <thead class="table-dark">
        <tr>

            <th>@Html.DisplayNameFor(Model => Model.Id)</th>

            <th>@Html.DisplayNameFor(Model => Model.Name)</th>

            <th>@Html.DisplayNameFor(Model => Model.Status)</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>

                <td>@item.Name</td>

                <td>@item.Status</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <form asp-action="Delele" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn xoá hay không')">
                        <Button class="btn btn-danger">Xoá</Button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>

