@model Eshop.Models.ProductType

@{
    ViewBag.Title = "Edit ProductTypes";
    Layout = "_Layout";
}

<form class="col-md-6 m-auto" asp-action="Edit" asp-route-productTypesId="@Model.Id" method="POST">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Status"/>
            @Html.DisplayNameFor(model => model.Status)
        </label>
    </div>

    <button class="btn btn-success mt-2">Cập nhật</button>

    @if (ViewBag.ErrorMsg != null)
    {
        <p class="text-danger">@ViewBag.ErrorMsg</p>
    }
</form>