@model IEnumerable<Eshop.Models.Account>

<table class="table table-light">
    <thead class="table-danger">
        <tr>

            <td>@Html.DisplayNameFor(Model => Model.Id)</td>

            <td>@Html.DisplayNameFor(Model => Model.Username)</td>

            <td>@Html.DisplayNameFor(Model => Model.Password)</td>

            <td>Chức năng</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>

                <td>@item.Username</td>

                <td>@item.Password</td>

                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" >Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>