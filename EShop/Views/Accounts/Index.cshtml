@model IEnumerable<Eshop.Models.Account>

<a asp-action="Create" class="btn btn-success mb-2">Thêm</a>
<table class="table table-light">
    <thead class="table-dark">
        <tr>

            <td>Ảnh đại diện</td>

            <td>@Html.DisplayNameFor(Model => Model.Username)</td>

            <td>@Html.DisplayNameFor(Model => Model.Password)</td>

            <td>Chức năng</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Avatar</td>

                <td>@item.Username</td>

                <td>@item.Password</td>

                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Bạn có chắc chắn muốn xoá không')" class="d-inline">
                        <Button class="btn btn-danger">Xoá</Button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>