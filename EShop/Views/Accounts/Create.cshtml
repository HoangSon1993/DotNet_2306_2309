@model Eshop.Models.Account

<form asp-action="Create" class="col-md-4 m-auto border border-primary border-dark p-5 shadow-sm" style="border-radius:10px ">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
        <input type="text" class="form-check-input" asp-for="Status" />
        @Html.DisplayNameFor(model=>model.Status)
        </label>
    </div>

    <Button class="mt-2 btn btn-success">Thêm</Button>
    <p>@ViewBag.ErrorMsg</p>
</form>