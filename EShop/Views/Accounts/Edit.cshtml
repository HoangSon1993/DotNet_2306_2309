@model Eshop.Models.Account

@{
    ViewBag.Title = "Edit Account";
    Layout = "_Layout";
}
<form asp-action="Edit" asp-route-accountId="@Model.Id" class="col-md-4 m-auto">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input type="text" class="form-check-input" asp-for="Status" />
            @Html.DisplayNameFor(model => model.Status)
        </label>
    </div>

    <button class="btn btn-success mt-2">Cập nhật</button>

    @if (ViewBag.ErrorMsg != null)
    {
        <p class="text-danger">@ViewBag.ErrorMsg</p>
    }
</form>