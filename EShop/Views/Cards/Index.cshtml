@model IEnumerable<Eshop.Models.Cart>

@{
    ViewBag.Title = "Cart";
    Layout = "_Layout";
}
<div style="height: 40vh">
    <table class="table table-light">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(Mode => Mode.Product.Image)</td>
                <td>@Html.DisplayNameFor(Model => Model.Product.Name)</td>
                <td>@Html.DisplayNameFor(Model => Model.Product.Price)</td>
                <td>@Html.DisplayNameFor(Model => Model.Quantity)</td>
                <td>Thành Tiền</td>

                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/product/@item.Product.Image" alt="@item.Product.Name" style="width: 80px">
                    </td>

                    <td>@item.Product.Name</td>

                    <td>@item.Product.Price.ToString("#,##0")</td>

                    <td>@item.Quantity</td>
                    <td>@((item.Quantity * item.Product.Price).ToString("#,##0"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" class="text-end font-weight-bold">Tổng tiền: @ViewBag.Total.ToString("#,##0")</td>
            </tr>
        </tfoot>
    </table>
</div>
<div style="height: 30vh">
    <form asp-controller="Invoices" asp-action="Add" class="col-md-3">
        <div class="form-group">
            <label for="ShippingAddress">Địa chỉ ship: </label>
            <input type="text" id="ShippingAddress" class="form-control" name="ShippingAddress" />
        </div>
        <div class="form-group">
            <label for="ShippingPhone">Địa chỉ ship: </label>
            <input type="text" id="ShippingPhone" class="form-control" name="ShippingPhone" />
        </div>
        <button class="btn btn-success mt-2">Thanh Toán</button>
    </form>
</div>